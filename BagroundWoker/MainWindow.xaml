    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="1"
           x:Name="lblCount"
           Content="0"
           HorizontalAlignment="Center"/>

        <Button Grid.Row="2"
                x:Name="btnStart"
                Content="Start"
                Click="btnStartClick"/>

        <Label Grid.Row="3"
           x:Name="lblStartus"
           Content="0"
           HorizontalAlignment="Center"/>

        <ProgressBar Grid.Row="4"
                x:Name="progressBar"/>
